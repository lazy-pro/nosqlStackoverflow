<%- include('header'); -%>
<br><br>
<!-- Page Content -->
<div class="container">

    <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">
            <div class="card mb-4">
                <%- messages('message', locals) %>
            </div>
            <!-- Blog Post -->
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">
                        <%= userdetail.name %>
                        <%= userdetail.regno %>
                    </h2>
                    <hr>
                    <h2 class="card-title">Questions</h2>
                </div>
            </div>

            <% if(questions) { %>
            <% for(var i=0;i<questions.length;i++){ %>
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title"><a href="/questions/<%= questions[i]._id %>">
                            <%= questions[i].title  %></a></h2>
                    <p class="card-text">
                        <% for(var j=0;j<questions[i].tags.length;j++){ %>
                        <a href="/questions/search/tag/<%= questions[i].tags[j] %>"><span style="background-color:#ADD8E6">
                                <%= questions[i].tags[j] %></span></a>&nbsp;&nbsp;
                        <% } %>
                    </p>
                    <!--<a href="/questions/<%= questions[i]._id %>" class="btn btn-primary"><%= questions[i].tags %></a><-->
                </div>
                <div class="card-footer text-muted" align="right">Asked on -
                    <%= questions[i].timestamp %>
                </div>
            </div>
            <% } %>
            <% } %>



        </div>
        <div class="col-md-8">

            <!-- Blog Post -->
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">Answers</h2>
                </div>
            </div>

            <% if(answers) { %>
            <% for(var i=0;i < answers.length;i++){ %>
            <% for(var j=0;j < allq.length;j++){ %>
            <% if(allq[j]._id == answers[i].questionid){ %>
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title"><a href="/questions/<%= allq[j]._id %>">
                            <%= allq[j].title  %></a></h2>
                    <hr>
                    <p>
                        <%= answers[i].ansbody %>
                    </p>
                </div>
                <div class="card-footer text-muted" align="right">Answered -
                    <%= answers[i].timestamp %>
                </div>
            </div>
            <% } %>
            <% } %>
            <% } %>
            <% } %>



        </div>
<%- include('footer'); -%>