<%- include('header'); -%>
<br><br>
    <!-- Page Content -->
    <div class="container">

      <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">
            <div class="card mb-4">
              <%- messages('message', locals) %>
            </div>
          <!-- Blog Post -->
          <div class="card mb-4">
            <img class="card-img-top" src="/images/logo.png" alt="Card image cap">
            <div class="card-body">
                <% if(user){ %>
              <h2 class="card-title">Welcome <%= user.name %>!</h2>
              <% } else {%>
                  <h2 class="card-title">Welcome Guest!</h2>
                  <% } %>
              <p class="card-text">Browse existing questions or ask your own.</p>
            </div>
          </div>

          <% if(questions) { %>
              <% for(var i=0;i<questions.length;i++){ %>
                  <div class="card mb-4">
                    <div class="card-body">
                      <h2 class="card-title"><a href="/questions/<%= questions[i]._id %>"><%= questions[i].title  %></a></h2>
                      <p class="card-text">
                          <% for(var j=0;j<questions[i].tags.length;j++){ %>
                          <a href="/questions/search/tag/<%= questions[i].tags[j] %>"><span style="background-color:#ADD8E6"><%= questions[i].tags[j] %></span></a>&nbsp;&nbsp;
                          <% } %>
                      </p>
                      <!--<a href="/questions/<%= questions[i]._id %>" class="btn btn-primary"><%= questions[i].tags %></a><-->
                    </div>
                    <div class="card-footer text-muted" align="right">Asked on -
                      <%= questions[i].timestamp %> by
                      <a href="/users/<%= questions[i].askedby %>"><%= questions[i].asker %></a>
                    </div>
                  </div>
                  <% } %>
          <% } %>



        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

          <!-- Search Widget -->
          <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
              <form action="/questions/searchbox/tag" method="POST">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Search tag" name="searchtag">
                <span class="input-group-btn">
                  <button class="btn btn-secondary" type="submit" >Go!</button>
                </span>
              </div>
            </form>
            </div>
          </div>

          <!-- Categories Widget -->
          <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
              <div class="row">
                <div class="col-lg-6">
                  <ul class="list-unstyled mb-0">
                    <li>
                      <a href="#">Web Design</a>
                    </li>
                    <li>
                      <a href="#">HTML</a>
                    </li>
                    <li>
                      <a href="#">Freebies</a>
                    </li>
                  </ul>
                </div>
                <div class="col-lg-6">
                  <ul class="list-unstyled mb-0">
                    <li>
                      <a href="#">JavaScript</a>
                    </li>
                    <li>
                      <a href="#">CSS</a>
                    </li>
                    <li>
                      <a href="#">Tutorials</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <!-- Side Widget -->
          <div class="card my-4">
            <h5 class="card-header">Side Widget</h5>
            <div class="card-body">
              You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
            </div>
          </div>

        </div>

      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->

<%- include('footer'); -%>
